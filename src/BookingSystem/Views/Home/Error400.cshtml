﻿@{
    ViewData["Title"] = "Error";
}


<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 50vh;">
        <div class="col-10 col-md-6 error-container">
            <h3>Error 400 - Bad Request</h3>
            <br />
            <img src="https://media.istockphoto.com/id/1152189152/vector/red-alert-icon.jpg?s=612x612&w=0&k=20&c=Kw_-i314F4cxgn2hmakp-88-O45FSx62c6r-OzKYMw4=" alt="Error Stamp" class="img-thumbnail" style="max-width: 200px;">
            <p>Oops, something went wrong!</p>
            <p>Return to <a asp-controller="Home" asp-action="Index">Homepage</a>.</p>
        </div>
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .error-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .error-container img {
        max-width: 100px;
        margin-bottom: 20px;
    }

    .error-container p {
        margin-bottom: 20px;
        color: #555;
    }

    .error-container a {
        color: #007bff;
        text-decoration: none;
    }

   .error-container a:hover {
       text-decoration: underline;
   }
</style>