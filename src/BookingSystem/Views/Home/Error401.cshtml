        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .error-container img {
        max-width: 100px;
        margin-bottom: 20px;
    }
    
    .error-container p {
        margin-bottom: 20px;
        color: #555;
    }
    
    .error-container a {
        color: #007bff;
        text-decoration: none;
