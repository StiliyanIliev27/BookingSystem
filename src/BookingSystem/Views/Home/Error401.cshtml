@{
    ViewData["Title"] = "Error";
}


<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 50vh;">
        <div class="col-10 col-md-6 error-container">
            <h3>Error 401 - Unauthorized</h3>
            <br />
