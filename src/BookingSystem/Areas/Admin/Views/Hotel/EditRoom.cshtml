@using BookingSystem.Core.Extensions

@model RoomEditInputModel

@{
    ViewData["Title"] = "Edit Room";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-area="Admin" asp-controller="Hotel" asp-action="EditRoom">
            <div class="mb-3">
                <label asp-for="@Model.PricePerNight" class="form-label-add-edit">
                    Price per Night:<span style="color: red"> *</span>
                </label>
                <input asp-for="@Model.PricePerNight" class="form-control" aria-required="true" placeholder="Room's price per night..." />
                <span asp-validation-for="@Model.PricePerNight" class="text-danger"></span>
            </div>
            

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-area="" asp-controller="Hotel" asp-action="Details" asp-route-id="@Model.Hotel_Id"
                   asp-route-information="@Model.GetInformation()" style="margin-right: 15px;" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Back to the hotel</a>

                <button type="submit" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

